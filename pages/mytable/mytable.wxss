/* pages/orderteacher/orderteacher.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: #E4E4E4;
  overflow: hidden;
}
.sign {
  margin: 8% 0 10% 2.5%;
  color: #333333;
}

.maintainer {
  width: 100%;
  height: 100%;
}

.timeTable {
  margin-left: 2.5%;
  background-color: #F7931E;
  color: #FFFFFF;
  vertical-align: top;
  text-align: center;
  width: 95%;
  height: 50%;
  display: inline-block;
}
.timeList {
  display: flex;
  flex-direction: row; 
  justify-content: space-around;
  text-align: center;
  background-color: #F7931E;
  height: 20%;
  font-size: 20px;
  width: 100%;
  
}
.timeItem {
  display: flex;
  flex-direction: column; 
  justify-content: center;
  text-align: center;
  width: 33.33%;
  border: 1rpx #eee solid;
}

.coarse {
  font-weight: bold;
}
.warming {
  color: red;
  margin: 20px 0 0 2.5%;
}

.btn{
  position: fixed;
  bottom: 3rpx;
  width: 100%;
  height: 120rpx;
}
.button{
  width: 200rpx;
  height: 70rpx;
  background-color: #F7931E;
  color: white;
  line-height: 70rpx;
  border-radius: -10rpx;
  font-size: 17px;
  margin-right: 50rpx;
}